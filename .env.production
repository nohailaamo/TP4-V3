# Production Configuration Example
APP_NAME=Biometric CI/CD Authentication
APP_VERSION=1.0.0
DEBUG=False

# Security - MUST CHANGE IN PRODUCTION
# Generate with: openssl rand -hex 32
SECRET_KEY=CHANGE_THIS_SECRET_KEY_IN_PRODUCTION_USE_OPENSSL_RAND
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database - Use PostgreSQL in production
# SQLite (Development)
# DATABASE_URL=sqlite+aiosqlite:///./biometric_cicd.db

# PostgreSQL (Production)
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/biometric_cicd

# Biometric settings
FACE_RECOGNITION_TOLERANCE=0.6
VOICE_MFCC_N_MFCC=13
SIMILARITY_THRESHOLD=0.85

# Encryption - MUST CHANGE IN PRODUCTION
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY=CHANGE_THIS_ENCRYPTION_KEY_IN_PRODUCTION_USE_OPENSSL_RAND

# GDPR Compliance
DATA_RETENTION_DAYS=365
REQUIRE_CONSENT=True

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/biometric-cicd/app.log

# CORS (Production - restrict to your domains)
# ALLOWED_ORIGINS=https://your-domain.com,https://ci.your-domain.com

# Rate Limiting (if using slowapi)
# RATE_LIMIT_ENABLED=True
# RATE_LIMIT_PER_MINUTE=60

# Monitoring (optional)
# SENTRY_DSN=https://your-sentry-dsn
# PROMETHEUS_ENABLED=True
